<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">

            <h1 class="display-4">Add Product</h1>

            <form>
                <div class="form-group">
                    <label for="itemName">Enter Item Name: </label>
                    <input type="text" class="form-control " id="itemName" min="0" max='32'>
                </div>
                <div class="form-group">
                    <label for="itemCategory">Enter Item Category: </label>
                    <select class="form-control" id="itemCategory">
                        {{#each storeCategories}}
                        <option>{{category}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Enter Item Description: </label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="itemCost">Enter Item Cost: </label>
                    <input type="number" class="form-control" id="itemCost" name="quantity" min="0">
                </div>
                <div class="form-group">
                    <label for="itemCost">Enter Item Stock: </label>
                    <input type="number" class="form-control" id="itemCost" name="quantity" min="0">
                </div>

                <p>Sale Status</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="itemSaleStatus" id="itemSaleStatus" value="Sale" checked>
                    <label class="form-check-label" for="itemSale">
                        Sale
                    </label>
                    </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="itemSaleStatus" id="itemNotSale" value="notSale">
                    <label class="form-check-label" for="itemNotSale">
                        Not Sale
                    </label>
                </div>
                
            </form>
        </div>
    </div>
</div>
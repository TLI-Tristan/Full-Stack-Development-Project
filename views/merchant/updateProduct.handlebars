<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">

            <h1 class="display-4">Create Item</h1>
        
            <form method="POST" action="saveUpdate/{{product.productID}}?_method=PUT" method='post'>
                <div class="form-group">
                    <label for="productID">Product ID</label>
                    <textarea class="form-control" id="productID" name="productID" rows="1"
                        onblur="toUpperCase()">{{product.productID}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <textarea class="form-control" id="productName" name="productName" rows="1"
                        onblur="toUpperCase()">{{product.productName}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productDescription">Product Description</label>
                    <textarea class="form-control" id="productDescription" name="productDescription" rows="1"
                        onblur="toUpperCase()">{{product.productDescription}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productPrice">Product Price</label>
                    <textarea class="form-control" id="productPrice" name="productPrice" rows="1">{{product.productPrice}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productStock">Product Stock</label>
                    <textarea class="form-control" id="productStock" name="productStock" rows="1">{{product.productStock}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productCategory">Product Category</label>
                    <textarea class="form-control" id="productCategory" name="productCategory" rows="1"
                        onblur="toUpperCase()">{{product.productCategory}}</textarea>
                </div>
                <div class="form-group">
                    <label for="productImage">Image input</label>
                    <img id="poster" src="{{product.productImage}}" alt=""
                        class="border img-thumbnail img-fluid" style="height:95%;width:100%">
                    <input type="file" class="form-control-file" id="imageUpload" name="imageUpload"
                        accept="image/png,image/jpeg,image/webp,image/gif,image/jpg">
                    <input id="productImage" name="productImage" value="{{product.productImage}}">
                    <div class="font-weight-bold text-danger-small" id="posterErr" style="display:none"></div>>
                </div>
                <button id="butAddVideo" type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
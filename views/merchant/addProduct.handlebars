<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">

            <h1 class="display-4">Create Item</h1>

            <form method="POST" enctype="multipart/form-data" action="/createItem">
                <div class="form-group">
                    <label class="font-italic" for="title">Product ID</label>
                    <textarea class="form-control" id="title" name="title" rows="1" onblur="toUpperCase()"></textarea>
                </div>
                <div class="form-group">
                    Product Name
                </div>
                <div class="form-group">
                    Product Description
                </div>
                <div class="form-group">
                    Product Price
                </div>
                <div class="form-group">
                    Product Stock
                </div>
                <div class="form-group">
                    Product Category
                </div>
                <div class="form-group">
                    <input type="file" name="file">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>

            <h2>Create Item/Update Item - Excel Sheet</h2>
            <form method="POST" enctype="multipart/form-data" action="/addItemExcel">
                <input type="file" name="file" required>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>